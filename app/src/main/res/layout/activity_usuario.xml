<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gfondo"

    tools:context=".user.UsuarioActivity">

    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="347dp"
        android:backgroundTint="#FBD46D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconhome" />

    <ImageButton
        android:id="@+id/buttonConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FBD46D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonHome"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconopciones" />

    <ImageView
        android:id="@+id/imagePesa"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="@+id/imageHist"
        app:layout_constraintStart_toStartOf="@+id/imageMem"
        app:layout_constraintTop_toBottomOf="@+id/imageAge"
        app:srcCompat="@drawable/iconpesa" />

    <ImageView
        android:id="@+id/imageAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="149dp"
        android:onClick="onClickAgenda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconagendar" />

    <ImageView
        android:id="@+id/imageMem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="280dp"
        app:layout_constraintEnd_toEndOf="@+id/imageAge"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageAge"
        app:layout_constraintTop_toBottomOf="@+id/imageAge"
        app:srcCompat="@drawable/iconmembresia" />

    <ImageView
        android:id="@+id/imageHist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="1dp"
        android:onClick="onClickHistorial"
        app:layout_constraintEnd_toEndOf="@+id/imageAge"
        app:layout_constraintStart_toStartOf="@+id/imageAge"
        app:layout_constraintTop_toBottomOf="@+id/imageAge"
        app:srcCompat="@drawable/iconhistorial" />


</androidx.constraintlayout.widget.ConstraintLayout>