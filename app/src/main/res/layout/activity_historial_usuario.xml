<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gfondo"

    tools:context=".User.HistorialUsuarioActivity">

    <ImageButton
        android:id="@+id/btn_homeusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="347dp"
        android:backgroundTint="#FBD46D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textViewHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp" android:fontFamily="@font/roboto"
        android:text="Historial"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_homeusuario"
        app:layout_constraintStart_toEndOf="@+id/btn_homeusuario"
        app:layout_constraintTop_toTopOf="@+id/btn_homeusuario"/>


    <CalendarView
        android:id="@+id/cal_User"
        android:layout_width="349dp"
        android:layout_height="309dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:backgroundTint="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_homeusuario" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:text="@string/txtEntrenamiento"
        android:textColor="@color/colorBlack"

        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cal_User"
        app:layout_constraintTop_toBottomOf="@+id/cal_User" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtKcal"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/cal_User"
        app:layout_constraintStart_toStartOf="@+id/cal_User"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtTiempo"
        android:textColor="@color/colorBlack"

        app:layout_constraintEnd_toEndOf="@+id/cal_User"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <TextView
        android:id="@+id/txtNumEntrenamientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info usuario"
        android:textColor="@color/colorBlack"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.301"
        tools:text="Info usuario" />

    <TextView
        android:id="@+id/txtCaloriasuser"
        android:layout_width="67dp"
        android:layout_height="24dp"
        android:text="Info usuario"
        android:textColor="@color/colorBlack"

        app:layout_constraintBottom_toBottomOf="@+id/txtNumEntrenamientos"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        tools:text="Info usuario" />

    <TextView
        android:id="@+id/txtCaloriasuser2"
        android:layout_width="74dp"
        android:layout_height="15dp"
        android:text="Info usuario"
        android:textColor="@color/colorBlack"

        app:layout_constraintBottom_toBottomOf="@+id/txtCaloriasuser"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="@+id/txtCaloriasuser"
        tools:text="Info usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>