<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gfondo"

    tools:context=".User.UsuarioAgregarAgendaActivity">

    <ImageButton
        android:id="@+id/btn_atrasagendausuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="347dp"
        android:backgroundTint="#FBD46D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textViewAgenda2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/txtAgendar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_atrasagendausuario"
        app:layout_constraintStart_toEndOf="@+id/btn_atrasagendausuario"
        app:layout_constraintTop_toTopOf="@+id/btn_atrasagendausuario" />

    <Button
        android:id="@+id/btn_checkhorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:background="@drawable/ic_btncheck"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancelhorario"
        app:layout_constraintStart_toEndOf="@+id/btn_cancelhorario"
        app:layout_constraintTop_toTopOf="@+id/btn_cancelhorario" />

    <Button
        android:id="@+id/btn_cancelhorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/ic_btncancel"
        app:layout_constraintEnd_toEndOf="@+id/buttonHoraFinal"
        app:layout_constraintStart_toStartOf="@+id/buttonHoraFinal"
        app:layout_constraintTop_toBottomOf="@+id/buttonHoraFinal" />

    <Button
        android:id="@+id/buttonDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/roboto"
        android:onClick="AbrirCalendario"
        android:text="@string/buttonDia"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toStartOf="@+id/textEditDia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonHoraIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/roboto"
        android:onClick="AbrirHoraIni"
        android:text="@string/buttonHoraIni"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="@+id/buttonDia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonDia"
        app:layout_constraintTop_toBottomOf="@+id/buttonDia" />

    <Button
        android:id="@+id/buttonHoraFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/roboto"
        android:onClick="AbrirHoraIni"
        android:text="@string/buttonHoraFinal"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="@+id/buttonHoraIni"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonHoraIni"
        app:layout_constraintTop_toBottomOf="@+id/buttonHoraIni" />
    <EditText
        android:id="@+id/textEditHoraFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/buttonHoraFinal"
        app:layout_constraintStart_toEndOf="@+id/buttonHoraFinal"
        app:layout_constraintTop_toTopOf="@+id/buttonHoraFinal" />

    <EditText
        android:id="@+id/textEditDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDia"
        app:layout_constraintStart_toEndOf="@+id/buttonDia"
        app:layout_constraintTop_toTopOf="@+id/buttonDia" />

    <EditText
        android:id="@+id/textEditHoraIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/buttonHoraIni"
        app:layout_constraintStart_toEndOf="@+id/buttonHoraIni"
        app:layout_constraintTop_toTopOf="@+id/buttonHoraIni" />


</androidx.constraintlayout.widget.ConstraintLayout>